<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="48dp"
        android:padding="8dp"
        android:background="@drawable/chat_bg_message_delivered">

        <TextView
            android:id="@+id/chat_view_message_text_view_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="Hi Gian!"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/chat_view_message_image_view_status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/chat_bg_message_status_sending"/>

</FrameLayout>

